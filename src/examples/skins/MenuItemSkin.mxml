<?xml version="1.0" encoding="utf-8"?>
<rx:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:rx="http://rx.reflex.io/2010"
	xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Metadata>
		[HostComponent("reflex.components.ButtonDefinition")]
	</fx:Metadata>
	
	<rx:layout>
		<rx:BasicLayout />
	</rx:layout>
	
	<rx:states>
		<s:State name="up" />
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="selectedUp"/>
		<s:State name="selectedOver"/>
		<s:State name="selectedDown"/>
		<s:State name="disabled"/>
	</rx:states>
	
	<rx:Rect left="0" right="0" top="0" bottom="0" radiusX="{hostComponent.selected ? 0 : 0}" radiusY="{hostComponent.selected ? 0 : 0}">
		<rx:fill>
			<rx:SolidColor color="#FFFFFF" color.over="#006699" color.down="#006699" 
				color.selectedUp="#DDDDDD" color.selectedOver="#DDDDDD" color.selectedDown="#DDDDDD"/>
		</rx:fill>
	</rx:Rect>
	
	<rx:Label id="label" 
			  color="#000000" color.over="#FFFFFF" color.down="#FFFFFF" 
			  color.selectedUp="#000000" color.selectedOver="#000000" color.selectedDown="#000000" 
			  fontSize="18" left="0" right="10" top="10" bottom="10" />
	
</rx:Skin>