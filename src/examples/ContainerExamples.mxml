<?xml version="1.0" encoding="utf-8"?>
<rx:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:rx="http://rx.reflex.io/2010"
	width="100%" height="100%">
	
	<!--
		Groups support percent-based and contraint-based layout. Awesome.
	-->
	
	<rx:HGroup width="100%">
		<rx:Button label="standard" />
		<rx:Button label="100%" width="100%" />
		<rx:Button label="standard" />
	</rx:HGroup>
	
	<rx:HGroup width="100%" height="100%" >
		<rx:VGroup height="100%">
			<rx:Button label="standard" />
			<rx:Button label="100%" height="100%" />
			<rx:Button label="standard" />
		</rx:VGroup>
		<rx:Group width="100%" height="100%">
			<rx:Button label="top, right" right="0" top="0" />
			<rx:Button label="centered" width="50%" height="50%" horizontalCenter="0" verticalCenter="0" />
			<rx:Button label="bottom, left" left="0" bottom="0" />
		</rx:Group>
	</rx:HGroup>
	
</rx:VGroup>
