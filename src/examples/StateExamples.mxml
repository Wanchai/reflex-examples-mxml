<?xml version="1.0" encoding="utf-8"?>
<rx:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:rx="http://rx.reflex.io/2010" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	horizontalCenter="0" verticalCenter="0">
	
	<!--
		Reflex now supports the Flex 4 state syntax.
	-->
	
	<rx:states>
		<s:State name="normal" />
		<s:State name="test" />
	</rx:states>
	
	<rx:Button label="Click Me" label.test="Yay States!" click="currentState = 'test'" />
	<rx:Button label="Reset" click="currentState = 'normal'" />
	
</rx:VGroup>