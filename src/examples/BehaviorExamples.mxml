	xmlns:rx="http://rx.reflex.io/2010" 
	xmlns:behaviors="reflex.behaviors.*" 
	horizontalCenter="0" verticalCenter="0">
	
	<!--
		In Reflex, component behavior is not baked into the code.
		User interactions are defined by reassignable "Behavior" classes.
	-->
	
	<rx:Scroller width="200" height="200" >
		<rx:behaviors>
			<behaviors:TouchScrollBehavior />
		</rx:behaviors>
		<rx:BitmapImage source="http://farm5.static.flickr.com/4060/4474881730_336af0f5fb.jpg" />
	</rx:Scroller>
	
</rx:Group>