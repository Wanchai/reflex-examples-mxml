<?xml version="1.0" encoding="utf-8"?>
<rx:VGroup
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:rx="http://rx.reflex.io/2010" 
	horizontalCenter="0" verticalCenter="0">
	
	<fx:Declarations>
		<!-- concrete classes are bindable (interfaces aren't) -->
		<rx:ScrollPosition id="horizontalPosition" />
		<rx:ScrollPosition id="verticalPosition" />
	</fx:Declarations>
	
	<rx:Scroller width="200" height="200" horizontalPosition="{horizontalPosition}" verticalPosition="{verticalPosition}" >
		<rx:BitmapImage source="http://farm5.static.flickr.com/4060/4474881730_336af0f5fb.jpg" />
	</rx:Scroller>
	
	<rx:HSlider id="horizontalScrollBar" position="{horizontalPosition}" />
	<rx:HSlider id="verticalScrollBar" position="{verticalPosition}" />
	
	<!--
	<rx:Text text="horizontal - min: {horizontalPosition.min}, max: {horizontalPosition.max}, position: {Math.round(horizontalPosition.position)}" />
	<rx:Text text="vertical - min: {verticalPosition.min}, max: {verticalPosition.max}, position: {Math.round(verticalPosition.position)}" />
	-->
	
</rx:VGroup>